{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2021",
        "lib": ["ES2021"],
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": false,
        "noImplicitOverride": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
